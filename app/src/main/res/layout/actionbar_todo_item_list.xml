<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/colorBackground">

    <ImageButton
        android:id="@+id/ib_back_actionbarTodoItemList"
        android:layout_width="?actionBarSize"
        android:layout_height="?actionBarSize"
        android:src="@drawable/ic_back"
        android:tint="@color/colorIcon"
        android:background="@color/colorBackground"/>

    <ImageButton
        android:id="@+id/ib_circle_actionbarTodoItemList"
        android:layout_width="?actionBarSize"
        android:layout_height="?actionBarSize"
        android:src="@drawable/ic_test_circle"
        android:tint="@color/colorIcon"
        android:background="@color/colorBackground"
        android:layout_toStartOf="@+id/ib_archive_actionbarTodoItemList"/>

    <ImageButton
        android:id="@+id/ib_archive_actionbarTodoItemList"
        android:layout_width="?actionBarSize"
        android:layout_height="?actionBarSize"
        android:src="@drawable/ic_archive"
        android:tint="@color/colorIcon"
        android:background="@color/colorBackground"
        android:layout_toStartOf="@+id/ib_reminder_actionbarTodoItemList"/>
    <ImageButton
        android:id="@+id/ib_reminder_actionbarTodoItemList"
        android:layout_width="?actionBarSize"
        android:layout_height="?actionBarSize"
        android:src="@drawable/ic_reminder"
        android:tint="@color/colorIcon"
        android:background="@color/colorBackground"
        android:layout_toStartOf="@+id/ib_pin_actionbarTodoItemList"/>
    <ImageButton
        android:id="@+id/ib_pin_actionbarTodoItemList"
        android:layout_width="?actionBarSize"
        android:layout_height="?actionBarSize"
        android:src="@drawable/ic_test_pin"
        android:tint="@color/colorIcon"
        android:background="@color/colorBackground"
        android:layout_toStartOf="@+id/ib_more_actionbarTodoItemList"/>

    <ImageButton
        android:id="@+id/ib_more_actionbarTodoItemList"
        android:layout_width="?actionBarSize"
        android:layout_height="?actionBarSize"
        android:src="@drawable/ic_more_vert"
        android:tint="@color/colorIcon"
        android:background="@color/colorBackground"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>
